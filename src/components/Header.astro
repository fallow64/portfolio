---
import { Image } from "astro:assets";
import pfpImage from "../images/pfp.png";
---

<div id="header-container">
  <Image id="pfp" loading="eager" alt="Austin Schneider" src={pfpImage} />
  <div id="text">
    <h1>Austin Schneider</h1>
    <span><em>Software Developer</em></span>
  </div>

  <style>
    #header-container {
      height: 100px;
      margin: 10px 10px 10px 0px;

      display: flex;
    }

    #text {
      align-self: flex-end;
    }

    #text > h1 {
      font-size: 42px;
      margin: 0px;
    }

    #text > span {
      color: var(--accent);
    }

    #pfp {
      width: 110px;
      height: 110px;
      margin-right: 30px;
      border-radius: 10px;
    }

    @media only screen and (max-width: 600px) {
      #header-container {
        height: auto;
        display: block;
      }

      #pfp {
        display: block;
        width: 100%;
        max-width: 320px;
        height: auto;
        margin: 0px auto 20px auto;
      }
    }
  </style>
</div>
