---
import { Image } from "astro:assets";
import pfpImage from "../images/pfp.png";
---

<div id="header-container">
  <Image id="pfp" loading="eager" alt="Austin Schneider" src={pfpImage} />
  <h1>Austin Schneider</h1>
</div>

<style>
  #header-container {
    height: 100px;
    margin: 10px;

    display: flex;
  }

  #header-container > h1 {
    margin: 0px;
    margin-bottom: 5px;
    font-size: 42px;
    align-self: flex-end;
  }

  #header-container > #pfp {
    width: 100px;
    height: 100px;
    margin-right: 30px;
    border-radius: 20px;
  }
</style>
