---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

const projects = [
  {
    title: "Flama",
    url: "https://github.com/fallow64/flama",
    description:
      "A statically-typed programming language written in Rust that compiles to Minecraft using DiamondFire, a Scratch-like Minecraft server. It makes creating games for DiamondFire easier by moving from a block-based programming language to a text-based one.",
    links: [{ text: "DiamondFire", url: "https://mcdiamondfire.com/about" }],
  },
  {
    title: "SubgenX",
    url: "https://github.com/fallow64/subgenx",
    description:
      "A CLI utility for generating subtitles for videos using OpenAI's whisper model. I've personally used it to transcribe 100+ hours of foreign language videos.",
    links: [],
  },
  {
    title: "Chatpad",
    url: "https://github.com/fallow64/chatpad-backend",
    description:
      "A message platform that handles user authentication and allows users to chat in various channels. The frontend was built with Next, with the backend implemented in Elysia.",
    links: [],
  },
  {
    title: "CHIP-8 Emulator",
    url: "https://en.wikipedia.org/wiki/CHIP-8",
    description:
      "An emulator for the CHIP-8 bytecode language, which is used to create simple games. It's made using C and uses SDL2 for input and graphics.",
    links: [],
  },
  {
    title: "Tiny Ludwig's Big Adventure",
    url: "https://fallow64.itch.io/tiny-ludwigs-big-adventure",
    description:
      "A game jam entry for the 2023 Ludwig Game Jam. Worked with a team of four to create a game as the sole developer. It is built using the Godot Engine and GDScript (a language similar to Python).",
    links: [],
  },
];
---

<Layout
  title="Austin Schneider"
  description="Hello world! I'm a developer attending the University of Wisconsinâ€“Madison, majoring in Computer Science."
>
  <main>
    <Header />
    <div id="about">
      <p>
        <span class="bracket">[</span> Hello world! I'm a student at the University
        of Wisconsin&mdash;Madison, majoring in Computer Science. I'm current working
        at the <a href="https://chtc.cs.wisc.edu" target="_blank"
          >Center for High Throughput Computing</a
        > as a Web Development Intern. <span class="bracket">]</span>
      </p>

      <p>
        <span class="bracket">&gt;&gt;</span> You can connect with me on
        <a href="https://linkedin.com/in/austinschneider314" target="_blank"
          >LinkedIn</a
        >,
        <a id="a-email" href="">email me</a>, or visit <a
          href="https://github.com/fallow64"
          target="_blank">my github</a
        >.
      </p>
    </div>

    <h2>Projects</h2>

    <ul class="project-list">
      {
        projects.map((project) => (
          <li class="project-item">
            <p>
              <span class="project-title">
                <a href={project.url}>{project.title}</a>
              </span>{" "}
              &mdash;{" "}
              {project.description.split(/\b(DiamondFire)\b/).map((part, i) => {
                const link = project.links.find((l) => l.text === part);
                return link ? <a href={link.url}>{part}</a> : part;
              })}
            </p>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>

<script is:inline>
  // level 100 script kiddy obsfucation lol
  const a = "mail";
  const b = "to:aus";
  const c = "tinsch";
  const d = "neider314@gm";
  const e = "ail.com";

  const emailElem = document.getElementById("a-email");
  emailElem.href = `${a}${b}${c}${d}${e}`;
</script>

<style>
  #about {
    margin-top: 0;
    padding: 24px;
    background: var(--surface);
    border: 2px solid var(--border);
  }

  #about p {
    margin: 16px 0;
  }

  .bracket {
    color: var(--accent);
    font-weight: 700;
    font-size: 18px;
  }

  .project-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .project-item {
    margin: 20px 0;
    padding: 20px;
    background: var(--surface);
    border: 2px solid var(--border);
    border-left: 6px solid var(--accent);
    position: relative;
  }

  .project-item::before {
    content: "//";
    position: absolute;
    top: 8px;
    right: 12px;
    color: var(--border-bright);
    font-size: 20px;
    font-weight: 700;
  }

  .project-item:hover {
    border-color: var(--border-bright);
    background: var(--surface-bright);
  }

  .project-title {
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .project-item p {
    margin: 0;
  }
</style>
