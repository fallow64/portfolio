---
import { getCollection } from "astro:content";
import Command from "../../components/Command.astro";
import Terminal from "../../components/Terminal.astro";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry: any) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props as { entry: any };
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description}>
  <Terminal>
    <Command command={`cat ~/blog/${entry.slug}.md`} />
    <article class="prose prose-invert max-w-none">
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-accent mb-2">{entry.data.title}</h1>
        <div class="text-muted text-sm">
          {
            entry.data.date.toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </div>
        {
          entry.data.tags && (
            <div class="flex gap-2 mt-2">
              {entry.data.tags.map((tag: string) => (
                <span class="text-xs text-accent">#{tag}</span>
              ))}
            </div>
          )
        }
      </div>
      <div class="blog-content">
        <Content />
      </div>
    </article>
  </Terminal>
</Layout>

<style is:global>
  .blog-content h1,
  .blog-content h2,
  .blog-content h3 {
    color: var(--color-accent);
    font-weight: bold;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .blog-content h1 {
    font-size: 1.5em;
  }

  .blog-content h2 {
    font-size: 1.25em;
  }

  .blog-content h3 {
    font-size: 1.1em;
  }

  .blog-content p {
    margin: 1em 0;
    line-height: 1.6;
  }

  .blog-content ul,
  .blog-content ol {
    margin: 1em 0;
    padding-left: 2em;
  }

  .blog-content li {
    margin: 0.5em 0;
  }

  .blog-content code {
    background: var(--color-fg);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .blog-content pre {
    background: var(--color-fg);
    padding: 1em;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1em 0;
    border: 1px solid var(--color-border);
  }

  .blog-content pre code {
    background: none;
    padding: 0;
  }

  .blog-content strong {
    color: var(--color-accent);
    font-weight: bold;
  }

  .blog-content blockquote {
    border-left: 3px solid var(--color-accent);
    padding-left: 1em;
    margin: 1em 0;
    color: var(--color-muted);
  }

  .blog-content a {
    color: var(--color-accent);
    text-decoration: underline;
  }
</style>
